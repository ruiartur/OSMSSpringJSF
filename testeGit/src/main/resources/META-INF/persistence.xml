<?xml version="1.0" encoding="UTF-8" ?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
   	<persistence-unit name="osms" transaction-type="RESOURCE_LOCAL">
   	<provider>org.hibernate.ejb.HibernatePersistence</provider>
      	<properties>
      		<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
         	<property name="javax.persistence.jdbc.url" value="jdbc:postgresql:osms"/>      		
         	<property name="javax.persistence.jdbc.user" value="osms"/>
         	<property name="javax.persistence.jdbc.password" value="osms"/>
         	
         	<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
         	<property name="hibernate.show_sql" value="true"/>


         	<!--<property name="hibernate.hbm2ddl.auto" value="create"/> -->
         	
		</properties>
	</persistence-unit>
</persistence>